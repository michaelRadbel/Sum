Input Three Numbers to Add

<%= form_tag('/calculate/addition') do %>
	<p>
		<%= label_tag("first_number") %>:
  		<%= text_field_tag(:firstNumber)%><br />
  	</p>

  	<p>
		<%= label_tag("second_number") %>:
  		<%= text_field_tag(:secondNumber) %><br />
  	</p>

  	<p>
		<%= label_tag("third_number") %>:
  		<%= text_field_tag(:thirdNumber) %><br />
  	</p>

  	<p>
  		<%= submit_tag("Add") %>
  	</p>

  	<p>
  		<%= label_tag("Result") %>
  		<%= @result %>
  	</p>

<% end %>

